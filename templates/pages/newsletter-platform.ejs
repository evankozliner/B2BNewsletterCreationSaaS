  const gPrice = pricingMap[billingType][subValue];
  const sPrice = starterPricing[billingType];

  growthPrice.textContent = `$${gPrice}/mo` + (billingType === 'annual' ? '' : '');
  starterPrice.textContent = `$${sPrice}/mo` + (billingType === 'annual' ? '' : '');
}


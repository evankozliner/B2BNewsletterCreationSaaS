<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="<%= description %>"
    />
    <% if (typeof frontmatter !== 'undefined' && frontmatter && frontmatter.seo && frontmatter.seo.ogImage) { %>
    <meta property="og:image" content="<%= frontmatter.seo.ogImage %>" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:description" content="<%= description %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<%= canonicalUrl %>" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="<%= frontmatter.seo.twitterImage || frontmatter.seo.ogImage %>" />
    <meta name="twitter:title" content="<%= title %>" />
    <meta name="twitter:description" content="<%= description %>" />
    <% } else { %>
    <meta property="og:image" content="https://withpotions.com/PotionsPreview.png" />
    <% } %>
    <meta
      name="keywords"
      content="<%= keywords %>"
    />
    <meta name="author" content="<%= author %>" />
    <meta http-equiv="Permissions-Policy" content="payment=(self https://calendly.com)" />
    <!-- Preload critical CSS -->
    <link rel="preload" href="<%= baseUrl %><%= styleSheet %>" as="style" />
    <link rel="stylesheet" href="<%= baseUrl %><%= styleSheet %>" />
    <!-- Preload critical font -->
    <link rel="preload" href="<%= baseUrl %>webfonts/prosa-light.woff2" as="font" type="font/woff2" crossorigin />
    <!-- Preload hero background image -->
    <!-- <link rel="preload" href="<%= baseUrl %>landing-page-banner.webp" as="image" fetchpriority="high" /> -->
    <% if (additionalCSS && additionalCSS.length > 0) { %>
        <% additionalCSS.forEach(css => { %>
    <link rel="stylesheet" href="<%= baseUrl %><%= css %>" />
        <% }) %>
    <% } %>
<!--     <link rel="icon" href="https://withpotions.com/airplane.svg" /> -->
<!--     <link rel="icon" href="https://withpotions.com/airplane.ico" /> -->
<!--     <link rel="canonical" href="<%= canonicalUrl || 'https://withpotions.com/' %>" /> -->

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>
      <%= title %>
    </title>

    <script src="<%= baseUrl %>lottie.min.js" defer></script>

    <% if (typeof isBlogPost !== 'undefined' && isBlogPost && typeof frontmatter !== 'undefined' && frontmatter) { %>
    <!-- Structured Data: Article Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "<%= frontmatter.title %>",
      <% if (frontmatter.subheader) { %>
      "alternativeHeadline": "<%= frontmatter.subheader %>",
      <% } %>
      <% if (frontmatter.image) { %>
      "image": "<%= frontmatter.image %>",
      <% } %>
      "author": {
        "@type": "Person",
        "name": "<%= frontmatter.author.name %>",
        <% if (frontmatter.author.social) { %>
        "url": "<%= frontmatter.author.social %>",
        <% } %>
        <% if (frontmatter.author.jobTitle) { %>
        "jobTitle": "<%= frontmatter.author.jobTitle %>"
        <% } %>
      },
      "publisher": {
        "@type": "Organization",
        "name": "Potions",
        "logo": {
          "@type": "ImageObject",
          "url": "https://withpotions.com/potions-logo.svg"
        }
      },
      <% if (frontmatter.datePublished) { %>
      "datePublished": "<%= frontmatter.datePublished %>",
      "dateModified": "<%= frontmatter.datePublished %>",
      <% } %>
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "<%= canonicalUrl %>"
      },
      <% if (frontmatter.seo && frontmatter.seo.articleSection) { %>
      "articleSection": "<%= frontmatter.seo.articleSection %>",
      <% } %>
      <% if (frontmatter.keywords) { %>
      "keywords": "<%= frontmatter.keywords %>",
      <% } %>
      "description": "<%= frontmatter.excerpt %>",
      "about": {
        "@type": "Thing",
        "name": "Newsletter Marketing Service"
      }
    }
    </script>

    <% if (frontmatter.seo && frontmatter.seo.faq && frontmatter.seo.faq.length > 0) { %>
    <!-- FAQ Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        <% frontmatter.seo.faq.forEach((faq, index) => { %>
        {
          "@type": "Question",
          "name": "<%= faq.question %>",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "<%= faq.answer %>"
          }
        }<%= index < frontmatter.seo.faq.length - 1 ? ',' : '' %>
        <% }); %>
      ]
    }
    </script>
    <% } %>

    <% if (frontmatter.seo && frontmatter.seo.breadcrumbs && frontmatter.seo.breadcrumbs.length > 0 && !(typeof isDarkPost !== 'undefined' && isDarkPost)) { %>
    <!-- Breadcrumb Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        <% frontmatter.seo.breadcrumbs.forEach((crumb, index) => { %>
        {
          "@type": "ListItem",
          "position": <%= index + 1 %>,
          "name": "<%= crumb.name %>",
          "item": "<%= crumb.url %>"
        }<%= index < frontmatter.seo.breadcrumbs.length - 1 ? ',' : '' %>
        <% }); %>
      ]
    }
    </script>
    <% } %>
    <% } %>

  </head>
  <body>

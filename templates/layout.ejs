<!-- End Google Tag Manager (noscript) -->
<% } %>
<%- include('partials/header', { baseUrl, showBlogLink }) %>
    <% if (typeof isBlogPost !== 'undefined' && isBlogPost && typeof frontmatter !== 'undefined' && frontmatter && frontmatter.seo && frontmatter.seo.breadcrumbs && !(typeof isDarkPost !== 'undefined' && isDarkPost)) { %>
    <!-- Breadcrumb Navigation -->
    <nav aria-label="Breadcrumb">
        <% frontmatter.seo.breadcrumbs.forEach((crumb, index) => { %>
            <% if (index < frontmatter.seo.breadcrumbs.length - 1) { %>
                <a href="<%= crumb.url.replace('https://withpotions.com', '') %>"><%= crumb.name %></a>
                <span class="breadcrumb-separator">/</span>
            <% } else { %>
                <span class="breadcrumb-current"><%= crumb.name %></span>
            <% } %>
        <% }); %>
    </nav>
    <% } %>
    <%- body %>
<%- include('partials/footer', { baseUrl }) %>

    <% if (scripts && scripts.length > 0) { %>
        <% scripts.forEach(script => { %>
    <script src="<%= baseUrl %><%= script %>" defer></script>
